{
  "compilerOptions": {
    "outDir": "./src",
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "lib": ["esnext", "dom"],
    "allowJs": true
  },
  "include": [
    "lib/*",
  ]
}
